<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GWMobileApp.Views.LoginPage"
             Title="Login">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20">
                <Grid VerticalOptions="CenterAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Entry Placeholder="Email" x:Name="EntryEmail" Grid.Row = "0"/>
                    <Entry Placeholder="Password" x:Name="EntryPassword" IsPassword="True" Grid.Row = "1"/>
                    <Button Text="Login" Margin="0,10,0,0" HorizontalOptions="CenterAndExpand" WidthRequest="200" Grid.Row="2" BackgroundColor="#86D32E" TextColor="White" Clicked="Login_Clicked"/>
                    <Button Text="Sign Up" Margin="0,10,0,0" HorizontalOptions="CenterAndExpand" WidthRequest="200" Grid.Row="3" BackgroundColor="#86D32E" TextColor="White" Clicked="SignUp_Clicked"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>